{
    "configurations": {
        "launch-current-project": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "type":    "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/<可执行文件路径>",
                "args": [],
                "cwd": "${workspaceRoot}",
                "environment": [],
                "externalConsole": true,
                "stopAtEntry": true,
                "MIMode": "gdb",
                "breakpointers": {
                    "exception": {
                        "cpp_throw": "Y",
                        "cpp_catch": "N"
                    }
                }
            }
        }
    }
}

